<div class="container-fluid">
    <style>
        #slideshow {
            position: relative;
            width: 300px;
            height: 520px;
            padding: 10px;
        }

        #slideshow>div {
            position: absolute;
            top: 10px;
            left: 10px;
        }

        #slideshow>div>img {
            border: 2px solid white;
            box-shadow: 0 0 20px white;
        }
    </style>

    <div id="slideshow" class="w-100">
        {{#each ubicaciones}}
        <div id="{{@index}}">            
            <span class=" font-weight-bold mr-2">{{codigo}}</span>{{detalle}}
        </div>
        {{/each}}
    </div>

{{> modal-find-zone_body}}

<script src="/socket.io/socket.io.js"></script>
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>

<script>
    $("#slideshow > div").hide();
    $('#slideshow > div:first').show();

    setInterval(function () {
        $('#slideshow > div:first')
            .fadeOut(1000)
            .next()
            .fadeIn(1000)
            .end()
            .appendTo('#slideshow');
    }, 5000);
</script>